{
  "name": "@powerfulyang/components",
  "version": "1.0.3",
  "description": "react-components",
  "author": "powerfulyang",
  "license": "MIT",
  "repository": "https://github.com/powerfulyang/tools.git",
  "files": [
    "dist",
    "src"
  ],
  "main": "dist/cjs/index.js",
  "module": "dist/es/index.js",
  "style": "dist/es/index.css",
  "sideEffects": [
    "**/*.scss",
    "src/index.tsx"
  ],
  "scripts": {
    "patch-version": "npm version patch --no-git-tag-version",
    "prettier": "prettier --write \"src/**/*.{js,jsx,tsx,ts,json,md,scss}\"",
    "lint:style": "stylelint --fix \"src/**/*.scss\"",
    "lint:js": "eslint --fix --ext .js,.jsx,.ts,.tsx ./src",
    "build": "rimraf dist && cross-env NODE_ENV=production rollup -c",
    "watch:build": "rimraf dist && cross-env NODE_ENV=production rollup -c --watch",
    "tsc": "tsc --noEmit",
    "prepare": "husky install",
    "test": "jest",
    "precommit": "npm run lint:js && npm run lint:style && npm run prettier && npm run tsc && npm run test",
    "prepublishOnly": "npm run build",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "browserslist": [
    "last 2 versions"
  ],
  "dependencies": {
    "@powerfulyang/hooks": "^0.3.5",
    "@powerfulyang/utils": "^1.3.6",
    "classnames": "^2.3.1",
    "framer-motion": "^5.4.5",
    "next": "^12.0.7",
    "rxjs": "^7.4.0"
  },
  "peerDependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@powerfulyang/lint": "^0.7.10",
    "@rollup/plugin-typescript": "^8.3.0",
    "@rollup/plugin-url": "^6.1.0",
    "@storybook/addon-actions": "^6.4.9",
    "@storybook/addon-essentials": "^6.4.9",
    "@storybook/addon-links": "^6.4.9",
    "@storybook/builder-webpack5": "^6.4.9",
    "@storybook/manager-webpack5": "^6.4.9",
    "@storybook/react": "^6.4.9",
    "@testing-library/react": "^12.1.2",
    "@types/react-dom": "^17.0.11",
    "babel-loader": "^8.2.3",
    "cross-env": "^7.0.3",
    "rollup": "^2.61.0",
    "rollup-plugin-postcss": "^4.0.2",
    "sass-loader": "^12.4.0",
    "tsconfig-paths-webpack-plugin": "^3.5.2",
    "webpack": "^5.65.0"
  }
}
