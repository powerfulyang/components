{
  "name": "@powerfulyang/components",
  "version": "0.9.0",
  "description": "react-components",
  "author": "powerfulyang",
  "license": "MIT",
  "repository": "https://github.com/powerfulyang/components.git",
  "homepage": "https://github.com/powerfulyang/components#readme",
  "bugs": {
    "url": "https://github.com/powerfulyang/components/issues"
  },
  "files": [
    "dist",
    "src"
  ],
  "main": "dist/cjs/index.js",
  "module": "dist/es/index.mjs",
  "style": "dist/es/index.css",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/es/index.mjs",
      "require": "./dist/cjs/index.js",
      "types": "./dist/types/index.d.ts"
    },
    "./dist/es/index.css": {
      "style": "./dist/es/index.css"
    },
    "./dist/cjs/index.css": {
      "style": "./dist/cjs/index.css"
    }
  },
  "sideEffects": false,
  "scripts": {
    "prettier": "prettier --write \"src/**/*.{js,jsx,tsx,ts,json,md,scss}\"",
    "lint:style": "stylelint --fix \"src/**/*.scss\"",
    "lint:js": "eslint --fix --ext .js,.jsx,.ts,.tsx ./src",
    "build": "rimraf dist && cross-env NODE_ENV=production rollup -c && npm run tsc",
    "watch:build": "rimraf dist && cross-env NODE_ENV=production rollup -c --watch",
    "tsc": "tsc --declaration --emitDeclarationOnly --outDir dist/types",
    "ts-check": "tsc --noEmit",
    "prepare": "husky install",
    "test": "jest",
    "precommit": "npm run ts-check && lint-staged && npm run test",
    "prepublishOnly": "npm run build"
  },
  "browserslist": [
    "last 2 versions"
  ],
  "dependencies": {
    "@powerfulyang/hooks": "1.0.2",
    "@powerfulyang/utils": "1.3.12",
    "classnames": "2.3.1",
    "framer-motion": "6.3.1",
    "react": "18.0.0",
    "react-dom": "18.0.0",
    "rxjs": "7.5.5"
  },
  "devDependencies": {
    "@powerfulyang/lint": "1.0.2",
    "@rollup/plugin-commonjs": "21.1.0",
    "@rollup/plugin-node-resolve": "13.2.1",
    "@rollup/plugin-typescript": "8.3.2",
    "@rollup/plugin-url": "6.1.0",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "13.1.1",
    "@types/react": "18.0.6",
    "@types/react-dom": "18.0.2",
    "cross-env": "7.0.3",
    "rollup": "2.70.2",
    "rollup-plugin-postcss": "4.0.2",
    "tailwindcss": "3.0.24"
  }
}
