{
  "name": "@powerfulyang/components",
  "version": "1.5.0",
  "description": "react-components",
  "author": "powerfulyang",
  "license": "MIT",
  "repository": "https://github.com/powerfulyang/components.git",
  "homepage": "https://github.com/powerfulyang/components#readme",
  "bugs": {
    "url": "https://github.com/powerfulyang/components/issues"
  },
  "files": [
    "dist",
    "src"
  ],
  "main": "dist/cjs/index.cjs",
  "module": "dist/es/index.mjs",
  "style": "dist/es/index.css",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/es/index.mjs",
      "require": "./dist/cjs/index.cjs",
      "types": "./dist/types/index.d.ts"
    },
    "./dist/es/index.css": {
      "style": "./dist/es/index.css"
    },
    "./dist/cjs/index.css": {
      "style": "./dist/cjs/index.css"
    }
  },
  "sideEffects": false,
  "scripts": {
    "bootstrap": "pnpm install --shamefully-hoist",
    "prettier": "prettier --write \"src/**/*.{tsx,ts,scss}\"",
    "lint:style": "stylelint --fix \"src/**/*.scss\"",
    "lint:js": "eslint --fix --ext .ts,.tsx ./src",
    "prebuild": "rimraf dist",
    "build": "run-p build:*",
    "build:source": "rollup -c",
    "build:types": "tsc -p tsconfig.types.json && tsc-alias -p tsconfig.types.json",
    "ts-check": "tsc --noEmit",
    "postprepare": "husky install",
    "test": "jest --passWithNoTests",
    "precommit": "npm run ts-check && lint-staged && npm run test",
    "prepublishOnly": "npm run build",
    "dev": "vite"
  },
  "browserslist": [
    "last 2 versions"
  ],
  "peerDependencies": {
    "classnames": "*",
    "framer-motion": "*",
    "react": "*",
    "react-dom": "*",
    "rxjs": "*",
    "@powerfulyang/hooks": "*",
    "@powerfulyang/utils": "*"
  },
  "devDependencies": {
    "@powerfulyang/lint": "2.0.2",
    "@rollup/plugin-typescript": "8.3.4",
    "@rollup/plugin-url": "7.0.0",
    "@testing-library/jest-dom": "5.16.5",
    "@testing-library/react": "13.3.0",
    "@vitejs/plugin-react": "2.0.1",
    "rollup-plugin-postcss": "4.0.2",
    "vite": "3.0.6",
    "typescript": "latest",
    "tailwindcss": "3.1.8"
  }
}
