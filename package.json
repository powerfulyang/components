{
  "name": "@powerfulyang/components",
  "version": "1.0.0",
  "description": "react-components",
  "author": "powerfulyang",
  "license": "MIT",
  "repository": "https://github.com/powerfulyang/tools.git",
  "files": [
    "dist",
    "src"
  ],
  "main": "dist/cjs/index.js",
  "module": "dist/es/index.js",
  "style": "dist/es/index.css",
  "sideEffects": false,
  "scripts": {
    "patch-version": "npm version patch --no-git-tag-version",
    "prettier": "prettier --write \"src/**/*.{js,jsx,tsx,ts,json,md,scss}\"",
    "lint:style": "stylelint --fix \"src/**/*.scss\"",
    "lint:js": "eslint --fix --ext .js,.jsx,.ts,.tsx ./src",
    "build": "rimraf dist && cross-env NODE_ENV=production rollup -c",
    "watch:build": "rimraf dist && cross-env NODE_ENV=production rollup -c --watch",
    "storybook": "start-storybook -p 6006",
    "tsc": "tsc --noEmit",
    "prepare": "husky install",
    "build-storybook": "build-storybook",
    "test": "jest",
    "precommit": "npm run lint:js && npm run lint:style && npm run prettier && npm run tsc && npm run test",
    "prepublishOnly": "npm run build"
  },
  "browserslist": [
    "last 2 versions"
  ],
  "dependencies": {
    "@powerfulyang/hooks": "^0.3.2",
    "@powerfulyang/utils": "^1.3.2",
    "classnames": "^2.3.1"
  },
  "peerDependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@powerfulyang/lint": "^0.7.9",
    "@powerfulyang/node-utils": "^1.0.4",
    "@rollup/plugin-typescript": "^8.3.0",
    "@rollup/plugin-url": "^6.1.0",
    "@storybook/addon-actions": "^6.4.7",
    "@storybook/addon-essentials": "^6.4.7",
    "@storybook/addon-links": "^6.4.7",
    "@storybook/react": "^6.4.7",
    "@testing-library/react": "^12.1.2",
    "@types/react-dom": "^17.0.11",
    "cross-env": "^7.0.3",
    "rollup": "^2.60.2",
    "rollup-plugin-postcss": "^4.0.2",
    "tailwindcss": "^2.2.19"
  }
}
