{
  "name": "@powerfulyang/components",
  "version": "1.0.6",
  "description": "react-components",
  "author": "powerfulyang",
  "license": "MIT",
  "repository": "https://github.com/powerfulyang/tools.git",
  "files": [
    "dist",
    "src"
  ],
  "main": "dist/cjs/index.js",
  "module": "dist/es/index.js",
  "style": "dist/es/index.css",
  "sideEffects": [
    "**/*.scss",
    "src/index.tsx"
  ],
  "scripts": {
    "patch-version": "npm version patch --no-git-tag-version",
    "prettier": "prettier --write \"src/**/*.{js,jsx,tsx,ts,json,md,scss}\"",
    "lint:style": "stylelint --fix \"src/**/*.scss\"",
    "lint:js": "eslint --fix --ext .js,.jsx,.ts,.tsx ./src",
    "build": "rimraf dist && cross-env NODE_ENV=production rollup -c",
    "watch:build": "rimraf dist && cross-env NODE_ENV=production rollup -c --watch",
    "tsc": "tsc --noEmit",
    "prepare": "husky install",
    "test": "jest",
    "precommit": "npm run lint:js && npm run lint:style && npm run prettier && npm run tsc && npm run test",
    "prepublishOnly": "npm run build"
  },
  "browserslist": [
    "last 2 versions"
  ],
  "dependencies": {
    "@powerfulyang/hooks": "^0.3.6",
    "@powerfulyang/utils": "^1.3.10",
    "classnames": "^2.3.1",
    "framer-motion": "^6.2.8",
    "next": "^12.1.0",
    "rxjs": "^7.5.4"
  },
  "peerDependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "@powerfulyang/lint": "^0.7.10",
    "@rollup/plugin-typescript": "^8.3.1",
    "@rollup/plugin-url": "^6.1.0",
    "@testing-library/react": "^12.1.3",
    "cross-env": "^7.0.3",
    "rollup": "^2.68.0",
    "rollup-plugin-postcss": "^4.0.2",
    "tsconfig-paths-webpack-plugin": "^3.5.2"
  }
}
