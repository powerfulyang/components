{
  "name": "@powerfulyang/components",
  "version": "1.2.3",
  "description": "react-components",
  "author": "powerfulyang",
  "license": "MIT",
  "repository": "https://github.com/powerfulyang/tools.git",
  "files": [
    "dist",
    "src"
  ],
  "main": "dist/cjs/index.js",
  "module": "dist/es/index.mjs",
  "style": "dist/es/index.css",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/es/index.mjs",
      "require": "./dist/cjs/index.js",
      "types": "./dist/types/index.d.ts"
    },
    "./dist/es/index.css": {
      "style": "./dist/es/index.css"
    }
  },
  "sideEffects": false,
  "scripts": {
    "patch-version": "npm version patch --no-git-tag-version",
    "prettier": "prettier --write \"src/**/*.{js,jsx,tsx,ts,json,md,scss}\"",
    "lint:style": "stylelint --fix \"src/**/*.scss\"",
    "lint:js": "eslint --fix --ext .js,.jsx,.ts,.tsx ./src",
    "build": "rimraf dist && cross-env NODE_ENV=production rollup -c && npm run tsc",
    "watch:build": "rimraf dist && cross-env NODE_ENV=production rollup -c --watch",
    "tsc": "tsc --declaration --emitDeclarationOnly --outDir dist/types",
    "prepare": "husky install",
    "test": "jest",
    "precommit": "lint-staged && npm run test",
    "prepublishOnly": "npm run build"
  },
  "browserslist": [
    "last 2 versions"
  ],
  "dependencies": {
    "@powerfulyang/hooks": "^0.3.8",
    "@powerfulyang/utils": "^1.3.10",
    "classnames": "^2.3.1",
    "framer-motion": "^6.2.8",
    "rxjs": "^7.5.5"
  },
  "peerDependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@powerfulyang/lint": "0.7.13",
    "@rollup/plugin-commonjs": "21.0.2",
    "@rollup/plugin-node-resolve": "13.1.3",
    "@rollup/plugin-typescript": "8.3.1",
    "@rollup/plugin-url": "6.1.0",
    "@testing-library/react": "12.1.3",
    "cross-env": "7.0.3",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "rollup": "2.70.0",
    "rollup-plugin-postcss": "4.0.2"
  }
}
